        u[] = log(C[]) - L[] ^ (1 + sigma_L) / (1 + sigma_L));
    };

    controls
    {
        C[], L[], I[], K[], B[];
        # if substituted I[], then only K[]
    };

    objective
    {
        U[] = u[] + beta * E[][U[1]];
    };

    constraints
    {

        P[] * C[] + Pk[] * I[] + B[] = (1 + i[-1]) * B[-1] + W[] * L[] + Div[] + r[] * Pk[] * K[-1] + T[] ;
        I[] = K[1] - (1 - delta) * K[-1] ;

        #blanchard
        # Pq[] * Cq[] + Pm[] * Cm[] + B[] / r[] = B[-1] + W[] * L[] + Div[] : # lambda[] ;

        # definition of overall consumption and price index 
        # C[] = zeta ^ (-zeta) * (1 - zeta) ^ (- (1 - zeta)) Cm[] ^ zeta * 
        # Cq[] ^ (1 - zeta) ;
        # P[] = Pm[] ^ zeta * Pq[] ^ (1 - zeta) ;

        # definition of interest rate
        # r[] = (1 + interest[]) as Q[] defined by Blanchard

        # old
#        C[] + B[] / r[] = w[] * L[] + B[-1] / pi[] + Div[] : lambda[];
    };

    calibration
    {
        beta  = 0.99;
        sigma_C = 1.5;
        sigma_L = 2.0;
        zeta = .3 ; # equilibrium share of oil consumption
    };
};

