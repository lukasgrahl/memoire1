            (1 - gamma_R) * log(pi_obj[]) +
            (1 - gamma_R) * gamma_pi * log(pi[] / pi[ss] - log(pi_obj[])) +
            (1 - gamma_R) * gamma_Y * log(Y[] / Y[-1]) +
